server {
  server_name {{ nginx_subdomain }}{{ nginx_domain }} {{ grafana_aliases|join(' ') }};
  listen   80;
  listen [::]:80;

  return 301 https://$host$request_uri;
}

server {
  server_name {{ nginx_subdomain }}{{ nginx_domain }} {{ grafana_aliases|join(' ') }};

  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  include snippets/ssl.conf;

{% if existing_certs is defined and existing_certs|bool==true %}
  ssl_certificate {{ lookup('vars', certificates.0 + '_pem_path') }};
  ssl_certificate_key {{ lookup('vars', certificates.0 + '_key_path') }};
{% elif container_cert_path is defined %}
  ssl_certificate {{ container_cert_path }};
  ssl_certificate_key {{ container_key_path }};
{% endif %}

  access_log  /var/log/nginx/grafana_access.log;

  # # Redirect server error pages to the static page /50x.html
  # #
  # error_page   500 502 503 504  /50x.html;
  # location = /50x.html {
  #         root   /etc/nginx/html;
  # }
  
  # error_page   403 /403.html;
  # location = /403.html {
  #         root   /etc/nginx/html;
  # }

  location = /login {
    return 301 /login/generic_oauth;
  }

{% if existing_certs is defined and existing_certs|bool==false %}
  location /.well-known/acme-challenge {
      types { } default_type "text/plain";
      root /var/www/letsencrypt;
      try_files $uri $uri/ =404;
      break;
  }
{% endif %}

  location / {
    include snippets/{{ role_name }}_auth.conf;
    set $upstream http://grafana:3000;
    proxy_pass          $upstream;    
    proxy_set_header    Host              $host;
    proxy_set_header    X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header    X-Forwarded-Proto $scheme;
    proxy_http_version  1.1;
  }
}
